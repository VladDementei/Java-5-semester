<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <TextArea fx:id="inputArea" layoutX="14.0" layoutY="14.0" wrapText="true" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="30.0">
            <font>
                <Font size="16.0" />
            </font></TextArea>
        <MenuBar layoutY="2.0" prefHeight="25.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <menus>
                <Menu mnemonicParsing="false" text="Menu">
                    <items>
                        <MenuItem fx:id="menuOpenFile" mnemonicParsing="false" onAction="#openFile" text="Open text file" />
                        <MenuItem fx:id="menuSaveFile" mnemonicParsing="false" onAction="#openFile" text="Save as text file" />
                        <MenuItem fx:id="menuEncodeText" mnemonicParsing="false" onAction="#openFile" text="Encode text" />
                        <MenuItem fx:id="menuDecodeText" mnemonicParsing="false" onAction="#openFile" text="Decode text" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</AnchorPane>
